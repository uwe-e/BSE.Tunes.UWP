    <Color x:Key="ContrastColor">White</Color>
    <!--<Color x:Key="SystemAccentColor">SteelBlue</Color>-->



    <ResourceDictionary.ThemeDictionaries>

        <ResourceDictionary x:Key="Light">

            <Color x:Key="HamburgerBackground">#FFF2F2F2</Color>
            <Color x:Key="HamburgerForeground">#FF000000</Color>
            <Color x:Key="NavAreaBackground">#FFF2F2F2</Color>
            <Color x:Key="NavButtonBackground">#FFF2F2F2</Color>
            <Color x:Key="NavButtonForeground">#FF000000</Color>
            <Color x:Key="NavButtonCheckedIndicator">#FF005A9E</Color>
            <Color x:Key="NavButtonHoverBackground">#FFDADADA</Color>
            <Color x:Key="NavButtonHoverForeground">#FF000000</Color>
            <Color x:Key="NavButtonPressedBackground">#FFC2C2C2</Color>
            <Color x:Key="NavButtonPressedForeground">#FF000000</Color>
            <Color x:Key="NavButtonCheckedBackground">#FFF2F2F2</Color>
            <Color x:Key="NavButtonCheckedForeground">#FF000000</Color>


            <!--<SolidColorBrush x:Key="NavAreaBackgroundThemeBrush" Color="{ThemeResource NavAreaBackground}"/>
            <SolidColorBrush x:Key="HamburgerBackgroundThemeBrush" Color="{ThemeResource HamburgerBackground}"/>
            <SolidColorBrush x:Key="HamburgerForegroundThemeBrush" Color="{ThemeResource HamburgerForeground}"/>
            <SolidColorBrush x:Key="NavButtonBackgroundThemeBrush" Color="{ThemeResource NavButtonBackground}"/>
