<UserControl
    x:Class="BSE.Tunes.StoreApp.Controls.RandomPlayerPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BSE.Tunes.StoreApp.Controls"
    xmlns:vm="using:BSE.Tunes.StoreApp.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.DataContext>
        <vm:RandomPlayerViewModel x:Name="ViewModel"/>
    </UserControl.DataContext>
    
    <Grid Background="DodgerBlue">
        <Button Command="{Binding PlayRandomTracksCommand}" >
            <TextBlock Text="play random"/>
        </Button>
    </Grid>
</UserControl>
